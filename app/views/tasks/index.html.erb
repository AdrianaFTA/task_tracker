<% content_for :title, "My Tasks" %>

<div class="p-5 mb-4 bg-light rounded-3 border">
  <div class="container-fluid py-5 text-center">
    <h1 class="display-5 fw-bold">Welcome, <%= current_user.email %>!</h1>
    <p class="col-md-12 fs-4">
      You are on your <strong>Home Page</strong>. 
      Use this space to organize your day.
    </p>
    <%= link_to "Create a New Note", new_task_path, class: "btn btn-primary btn-lg mt-3" %>
  </div>
</div> 

<div id="tasks">
  <% if @tasks.any? %>
    <h2 class="mb-4">Your Notes</h2>
    <% @tasks.each do |task| %>
      <div class="card mb-3 shadow-sm">
        <div class="card-body">
          <%= render task %>
          <div class="mt-2">
            <%= link_to "View Details", task, class: "btn btn-sm btn-outline-secondary" %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="alert alert-info mt-4 text-center" role="alert">
      <h4 class="alert-heading">No tasks found!</h4>
      <p>It looks like your list is empty. Why not start by creating a new note?</p>
      <%= link_to "Create your first task", new_task_path, class: "btn btn-primary mt-2" %>
    </div>
  <% end %>
</div>

<div class="mt-4">
  <%= paginate @tasks %>
</div>