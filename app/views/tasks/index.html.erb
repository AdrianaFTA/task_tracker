<p style="color: green"><%= notice %></p>

<% content_for :title, "Tasks" %>

<h1>Tasks</h1>

<div id="tasks">
  <% if @tasks.any? %>
    <% @tasks.each do |task| %>
      <%= render task %>
      <p>
        <%= link_to "Show this task", task, class: "btn btn-sm btn-outline-secondary" %>
      </p>
    <% end %>
  <% else %>
    <div class="alert alert-info mt-4" role="alert">
      <h4 class="alert-heading">No tasks found!</h4>
      <p>It looks like your task list is empty. Why not start by creating a new one?</p>
      <hr>
      <%= link_to "Create your first task", new_task_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>
<%= paginate @tasks %>
